pipeline {
    agent any
    stages {
        stage('Clone repository and Clean it') {
            steps {
                dir('jenkins/pipeline') {
                    sh 'mvn clean'
                }
            }
        }
        stage('Test') {
            steps {
                dir('jenkins/pipeline'){
                    sh "mvn test"
                }
            }
        }
        stage('Deploy') {
            steps {
                dir('jenkins/pipeline') {
                    sh "mvn package"
                }
            }
        }
    }
}